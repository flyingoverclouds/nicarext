{
    "name": "nicarext",
    "displayName": "NIcarExt",
    "description": "Icarus Verilog and simulator extension by Nicolas CLERC",
    "version": "0.0.1",
    "publisher": "niclerc-vscode",
    "homepage": "https://github.com/flyingoverclouds/nicarext",
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Languages",
        "Snippets"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello",
        "onCommand:extension.direBonjour",
        "onLanguage:verilog"
    ],
    "main": "./out/src/extension",
    "contributes": {
		"languages": [{
			"id": "verilog",
			"aliases": ["Verilog", "verilog"],
			"extensions": [".v",".vh"],
			"configuration": "./verilog.configuration.json"
		}],
		"grammars": [{
			"language": "verilog",
			"scopeName": "source.verilog",
			"path": "./src/syntaxes/verilog.tmLanguage"
		}],
		"snippets": [{
			"language": "verilog",
			"path": "./src/snippets/verilog.json"
        }],
        
        "commands": [{
            "command": "extension.sayHello",
            "title": "Hello World"
        } ,
        {
            "command": "extension.direBonjour",
            "title": "VSCode va vous dire bonjour"
        }],
        "configuration": {
            "type": "object",
            "title": "Configuration for NIcarExt extension",
            "properties": {
                "nicarextServer.maxNumberOfProblems": {
                "type": "number",
                "default": 100,
                "description": "Controls the maximum number of problems produced by the server."
                },
                "nicarextServer.trace.server": {
                "type": "string",
                "enum": [
                    "off",
                    "messages",
                    "verbose"
                ],
                "default": "off",
                "description": "Traces the communication between VSCode and the nicarext service."
                }        
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "dependencies": {
        "vscode-languageclient": "^3.1.0",
        "vscode-languageserver": "^3.1.0"
  }
}